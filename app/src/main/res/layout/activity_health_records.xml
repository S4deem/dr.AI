<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/forimageview"

    android:layout_height="match_parent"
    tools:context=".healthRecords">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="52dp"
        android:background="@color/black" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_baseline_menu_24" />


    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="339dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:text="Dr.AI"
        android:textColorLink="@color/black"
        android:textSize="25sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a health record to view"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="60dp"
        android:textSize="20dp"/>


    <Button
        android:id="@+id/patientComingButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="170dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edittext"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:text="Coming Appointments"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/patientPreviousButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_below="@+id/patientComingButton"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edittext"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:text="Previous Appointments"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/patientPrescriptionButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_below="@+id/patientPreviousButton"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edittext"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:text="Prescription"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />


</RelativeLayout>