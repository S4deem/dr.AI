<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/forimageview"
    android:layout_height="match_parent"
    tools:context=".patient">



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="52dp"
        android:background="@color/black" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_baseline_menu_24" />


    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="339dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:text="Dr.AI"
        android:textColorLink="@color/black"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:gravity="center"
        android:text="you can find your information here "
        android:textSize="19sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-1dp" />

    <GridLayout

        android:layout_width="match_parent"
        android:layout_height="438dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="5dp"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        tools:layout_editor_absoluteY="211dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginBottom="172dp"
            android:orientation="vertical">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="156dp"
            android:layout_height="138dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_column="1"
                android:src="@drawable/healthcalendar1"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="45dp" />

            <TextView
                android:id="@+id/textVirtualTherapist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/health_record"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="133dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="156dp"
            android:layout_height="138dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/appointmentsummary"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="45dp" />

            <TextView
                android:id="@+id/textPatient"
                android:layout_width="133dp"
                android:layout_height="43dp"
                android:text="@string/appointment_summary"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="133dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="156dp"
            android:layout_height="138dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/edittext"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_row="0"
                android:layout_column="1"
                android:src="@drawable/back"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="45dp" />

            <TextView
                android:id="@+id/textAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/go_back"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="133dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="156dp"
            android:layout_height="138dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/edittext"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/planner1"
                tools:layout_editor_absoluteX="35dp"
                tools:layout_editor_absoluteY="45dp" />

            <TextView
                android:id="@+id/textProfile"
                android:layout_width="126dp"
                android:layout_height="48dp"
                android:text="@string/check_up_appointment"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="133dp" />


        </LinearLayout>

        <Button
            android:id="@+id/appointmentSummaryButton"
            android:layout_width="156dp"
            android:layout_height="138dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp" />

        <Button
            android:id="@+id/healthRecordButton"
            android:layout_width="156dp"
            android:layout_height="138dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp" />

        <Button
            android:id="@+id/checkUpButton"
            android:layout_width="156dp"
            android:layout_height="138dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/edittext"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp" />

        <Button
            android:id="@+id/goBackButton"
            android:layout_width="156dp"
            android:layout_height="138dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/edittext"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp" />


    </GridLayout>


</RelativeLayout>